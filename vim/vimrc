set nocompatible

" Initialize Pathogen
runtime ~/.vim/autoload/pathogen.vim
call pathogen#infect()
call pathogen#helptags()

" Syntax highlighting
syntax on


" No swap files
set noswapfile
set nobackup
set nowb

" Persistent Undo
silent !mkdir ~/.vim/backups > /dev/null 2>&1
set undodir=~/.vim/backups
set undofile

filetype indent on
filetype plugin on

" TODO: Move contents of the .after files here
source ~/.vimrc.after
